@model Group_Ledger.Models.UserTransactionViewModel

@{
    ViewBag.Title = "Your Transaction Info";
    var transFrom = Model.TransactionsFromUser.ToList();
    var transTo = Model.TransactionsToUser.ToList();
}

<h2>Your Transaction Info</h2>

<p>
    @Html.ActionLink("Add Transaction", "Create", "Transactions", routeValues: null, htmlAttributes: new{ @class = "btn btn-primary btn-lg"})
</p>
<div class="row">
    <div class="col-md-10">
        <table class="table">
            <caption style="font-weight: bold; font-size: x-large">
                @Html.DisplayNameFor(model => model.TransactionsFromUser)
            </caption>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsFromUser.FirstOrDefault().To.Person.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsFromUser.FirstOrDefault().To.Person.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsFromUser.FirstOrDefault().Amount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in transFrom)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.To.Person.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.To.Person.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <table class="table">
            <caption style="font-weight: bold; font-size: x-large">
                @Html.DisplayNameFor(model => model.TransactionsToUser)
            </caption>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsToUser.FirstOrDefault().From.Person.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsToUser.FirstOrDefault().From.Person.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransactionsToUser.FirstOrDefault().Amount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in transTo)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.From.Person.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.From.Person.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
